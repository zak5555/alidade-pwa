{
  "name": "alidade-pwa",
  "version": "1.0.0",
  "description": "",
  "main": "alidade_upgrade_package.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "ops:hooks:install": "node scripts/install-git-hooks.cjs",
    "security:scan:secrets": "node scripts/check-secrets-hygiene.cjs",
    "security:scan:secrets:staged": "node scripts/check-secrets-hygiene.cjs --staged",
    "test:dataset:golden": "node scripts/validate-golden-record-strict.cjs",
    "test:smoke:defense": "node scripts/smoke-defense-golden-record.cjs",
    "test:smoke:defense:full": "npm run test:dataset:golden && npm run test:smoke:defense",
    "ops:intel:probe": "node --env-file=.env scripts/probe-intel-ingest.cjs",
    "ops:intel:secrets:check": "node --env-file=.env scripts/check-intel-verify-secrets.cjs --require-enabled 0",
    "ops:intel:secrets:check:strict": "node --env-file=.env scripts/check-intel-verify-secrets.cjs --require-enabled 1",
    "ops:intel:health": "node --env-file=.env scripts/check-intel-ingest-health.cjs",
    "ops:intel:verify": "node --env-file=.env scripts/verify-intel-ingest.cjs",
    "ops:intel:verify:quick": "node --env-file=.env scripts/verify-intel-ingest.cjs --profile quick",
    "ops:intel:sla": "node scripts/check-intel-verify-sla.cjs --workflow smoke-defense.yml --branch main --require-success-job intel-verify-full",
    "ops:intel:burnin": "node scripts/check-intel-burnin.cjs --workflow smoke-defense.yml --branch main --min-success-streak 8 --lookback-limit 30 --max-open-incidents 0 --incident-labels ops,intel,sla",
    "ops:intel:burnin:trend": "node scripts/report-intel-burnin-trend.cjs --workflow smoke-defense.yml --branch main --window-days 30 --incident-labels ops,intel,sla --min-success-rate-pct 75 --max-incident-rate-per-100-runs 5",
    "ops:intel:sla:remediate": "node scripts/dispatch-intel-verify-remediation.cjs --workflow smoke-defense.yml --branch main --require-job intel-verify-full --verify-profile full --sla-max-age-hours 12 --cooldown-minutes 30",
    "ops:intel:sla:incident:dry": "node scripts/report-intel-sla-incident.cjs --mode open --workflow smoke-defense.yml --branch main --required-job intel-verify-full --sla-max-age-hours 12 --sla-outcome failure --remediation-outcome failure --remediation-dispatched false --remediation-reason smoke_probe --labels ops,incident,intel,sla,priority:p1 --assignees alidade-owner --comment-cooldown-minutes 60 --escalation-hours 6 --escalation-label priority:p0 --dry-run true",
    "ops:intel:sla:incident:resolve:dry": "node scripts/report-intel-sla-incident.cjs --mode resolve --workflow smoke-defense.yml --branch main --required-job intel-verify-full --sla-max-age-hours 12 --sla-outcome success --labels ops,incident,intel,sla,priority:p1 --assignees alidade-owner --comment-cooldown-minutes 60 --escalation-hours 6 --escalation-label priority:p0 --dry-run true",
    "ops:intel:triage:dryrun:guard": "node --env-file=.env scripts/check-intel-triage-dry-run-guard.cjs --write-github-output 0",
    "ops:intel:triage:dryrun:guard:strict": "node --env-file=.env scripts/check-intel-triage-dry-run-guard.cjs --strict 1 --write-github-output 0",
    "ops:intel:triage:route:live:check": "node --env-file=.env scripts/check-intel-triage-dry-run-guard.cjs --strict 1 --require-auto-incident 1 --dry-run false --write-github-output 0",
    "ops:intel:health:quick": "node --env-file=.env scripts/check-intel-ingest-health.cjs --profile quick",
    "ops:intel:health:strict": "node --env-file=.env scripts/check-intel-ingest-health.cjs --profile strict",
    "ops:intel:verify:strict": "node --env-file=.env scripts/verify-intel-ingest.cjs --profile strict",
    "ops:intel:verify:strict:rejection": "node --env-file=.env scripts/verify-intel-ingest.cjs --profile strict_rejection",
    "ops:intel:ci": "npm run ops:intel:verify:strict && npm run ops:intel:verify:strict:rejection && npm run ops:intel:health:strict",
    "audit:app-contract": "node scripts/refactor/audit-app-contract.mjs app.js",
    "build": "tailwindcss -i ./style-input.css -o ./output.css --minify",
    "watch": "tailwindcss -i ./style-input.css -o ./output.css --watch"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "supabase": "^2.76.9",
    "tailwindcss": "^3.4.17"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.95.3"
  }
}
